{
  "name": "@cortex-ui/core",
  "version": "0.0.154",
  "description": "Cortex-UI is Web Component develop from Cortex Design System from Hlab Designer Team.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "prod": "yarn run clear-cache & yarn build & yarn convert-scss & yarn compress-js & yarn export-components & yarn public",
    "compress-js": "yarn gulp compress",
    "convert-scss": "yarn sass styles/scss/main.scss styles/css/index.css --style compressed",
    "export-components": "node script/export.script.js",
    "public": "node script/publish.script.js",
    "clear-cache": "rm -rf cx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Punyarit/cortex-ui.git"
  },
  "keywords": [
    "Cortex-UI"
  ],
  "author": "Punyarit",
  "license": "H Lab Co., Ltd.",
  "bugs": {
    "url": "https://github.com/Punyarit/cortex-ui/issues"
  },
  "homepage": "https://github.com/Punyarit/cortex-ui#readme",
  "files": [
    "cx/**/*.js",
    "cx/*.js",
    "cx/**/*.d.ts",
    "styles/css/index.css"
  ],
  "dependencies": {
    "@types/react": "^18.0.27",
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "sass": "^1.58.0",
    "uglify-js": "^3.17.4"
  }
}